        // Код перенаправления на страницу в Chrome
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            if (/Chrome/i.test(navigator.userAgent)) {
                window.location.href = "googlechrome://navigate?url=https://facebook.com"; // Замените URL на ваш сайт
            }
        }
    </script>
